<Page x:Class="FierceStukCloud.Pc.Mvvm.Views.Pages.PlaylistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:local="clr-namespace:FierceStukCloud.Pc.Mvvm.Views.Pages"
      mc:Ignorable="d" 
      xmlns:ctrl="clr-namespace:Itenso.Windows.Controls.ListViewLayout;assembly=Itenso.Windows.Controls.ListViewLayout"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlaylistPage">

    <Grid Background="{StaticResource GrayLVL2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="225"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0"              
                  Margin="15,15,15,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   Margin="25,0" 
                   Source="{Binding PlayList.ImageUri}"
                   Stretch="Fill"/>



            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.Resources>

                    <Style TargetType="{x:Type TextBlock}">

                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                                
                        <Setter Property="VerticalAlignment" Value="Center"/>

                        <Setter Property="Foreground" Value="{StaticResource StandartLightColor2}"/>

                    </Style>
                    
                </Grid.Resources>
                
                <TextBlock Grid.Row="0" Text="Плейлист"
                           FontSize="20"
                           VerticalAlignment="Bottom"/>

                <TextBlock Grid.Row="1" Text="{Binding PlayList.Title}"
                           FontSize="45"
                           FontWeight="SemiBold"/>

                <TextBlock Grid.Row="2" Text="Авторы"
                           FontSize="14"/>

                <TextBlock Grid.Row="3" DataContext="{Binding PlayList}"
                           FontSize="14">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}Автор: {0}  •  Треков:{1}  •  ">
                            <Binding Path="UserLogin"/>
                            <Binding Path="Count" Source="Songs"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <Grid Grid.Row="4">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="135"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Style="{StaticResource StandardButton}">

                    </Button>

                </Grid>

            </Grid>

        </Grid>


        <ListView Grid.Row="1"
                  Margin="15,0"
                  ctrl:ListViewLayoutManager.Enabled="true"
                  ItemsSource="{Binding PlayList.Songs}"
                  SelectedItem="{Binding SelectedSong}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Path=Title}"
                        ctrl:RangeColumn.IsFillColumn="False"
                        Width="auto"
                        ctrl:RangeColumn.MinWidth="350"
                        ctrl:RangeColumn.MaxWidth="530"
                        Header="Название"/>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Path=Author}"
                        ctrl:RangeColumn.MinWidth="150"
                        ctrl:RangeColumn.MaxWidth="300"
                        Header="Исполнитель" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Path=Album}"
                        ctrl:RangeColumn.MinWidth="0"
                        
                        ctrl:RangeColumn.MaxWidth="300"
                        Header="Альбом" />

                    <GridViewColumn
                        DisplayMemberBinding="{Binding Path=Duration}"
                        Width="auto"
                        ctrl:RangeColumn.MinWidth="0"
                        ctrl:RangeColumn.MaxWidth="160"
                        Header="Время" />
                 

                </GridView>
            </ListView.View>

            <ListView.ContextMenu>
                <ContextMenu Background="{StaticResource GrayLVL0}"
                             Foreground="{StaticResource StandartLightColor}">
                    <MenuItem Header="Добавить песню с устройства" Command="{Binding AddSongFromDeviceCommand}"/>
                </ContextMenu>
            </ListView.ContextMenu>

           

        </ListView>
        
    </Grid>
</Page>
