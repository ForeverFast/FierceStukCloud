<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FierceStukCloud_NetCoreLib.Resources.ResourceDictionaries">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="pack://application:,,,/FierceStukCloud_NetCoreLib;component/Resources/ResourceDictionaries/Brushes.xaml"/>
        <ResourceDictionary
            Source="pack://application:,,,/FierceStukCloud_NetCoreLib;component/Resources/ResourceDictionaries/TextBlockStyles.xaml"/>
        <ResourceDictionary
            Source="pack://application:,,,/FierceStukCloud_NetCoreLib;component/Resources/ResourceDictionaries/MenuStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    


    <Style x:Key="BaseListBoxStyle" TargetType="{x:Type ListBox}">

        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{StaticResource GrayLVL1}"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>

    </Style>

    <Style x:Key="MainListBoxStyle" TargetType="{x:Type ListBox}" BasedOn="{StaticResource BaseListBoxStyle}">

        <Setter Property="ContextMenu">
            <Setter.Value>
                <ContextMenu Style="{StaticResource MenuItemStyle1}"
                             Background="{StaticResource GrayLVL2}">
                   
                    <MenuItem Header="Добавить аудиофайл"
                              Command="{Binding AddLocalSongFromPCCommand}"/>
                    <MenuItem Header="Добавить папку"
                              Command="{Binding AddLocalFolderFromPCCommand}"/>
                </ContextMenu>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type ListBoxItem}">

                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Cursor" Value="Hand"/>

                    <Setter Property="Tag"
                            Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBox}}, Path=DataContext}"/>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu DataContext="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget}"
                                         Style="{StaticResource MenuItemStyle1}">
                                <MenuItem Header="Открыть в проводнике" Command="{Binding Path= Tag.OpenLocalFolderOnDiskCommand}"/>
                                <MenuItem Header="Добавить на сервер" Command="{Binding Path=Tag.AddToMainServerCommand}" IsEnabled="False"/>
                                <MenuItem Header="Удалить" Command="{Binding Path=Tag.DeleteFromAppCommand}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border Height="{TemplateBinding Height}"
                                        Width="{TemplateBinding Width}"
                                        Background="{StaticResource GrayLVL0}">
                                    <Grid>
                                        <Label Margin="5,0,0,0"
                                               Padding="0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               
                                               Content="{Binding Title}"
                                               FontSize="18"
                                               Foreground="{StaticResource StandartTextColor}"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="SongsListBoxStyle" TargetType="{x:Type ListBox}" BasedOn="{StaticResource BaseListBoxStyle}">

        

        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type ListBoxItem}">

                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Background" Value="{StaticResource GrayLVL0}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border Height="{TemplateBinding Height}"
                                        Width="{TemplateBinding Width}"
                                        Background="{TemplateBinding Background}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="15"/>
                                        </Grid.ColumnDefinitions>

                                        <Image  Grid.Column="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="40"
                                                Height="30"
                                                Stretch="Fill"
                                                Margin="0,0,0,0"
                                                
                                                Source="/FierceStukCloud_NetCoreLib;component/Resources/Images/Screenshot_544.png" />

                                        <!--<Canvas Grid.Column="1"
                                                ClipToBounds="True">
                                            <TextBlock Padding="0"
                                                       Canvas.Left="5"
                                                       Canvas.Top="6"
                                                       
                                                      
                                                       FontSize="13"
                                                       Foreground="{StaticResource StandartTextColor}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} - {1}">
                                                        <Binding Path="Author"/>
                                                        <Binding Path="Title" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Canvas>-->

                                        <Canvas x:Name="Canvas" Grid.Column="1"
                                                ClipToBounds="True">
                                            <TextBlock Padding="0"
                                                       Canvas.Left="5"
                                                       Canvas.Top="6"
                                                       
                                                       
                                                       FontSize="13"
                                                       Foreground="{StaticResource StandartTextColor}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} - {1}">
                                                        <Binding Path="Author"/>
                                                        <Binding Path="Title" />
                                                    </MultiBinding>
                                                </TextBlock.Text>

                                                <TextBlock.Triggers>
                                                    <EventTrigger RoutedEvent="TextBlock.MouseEnter">
                                                        <EventTrigger.Actions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)" From="5" To="-100" 
                                                                                     Duration="0:0:10" RepeatBehavior="Forever"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger.Actions>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="TextBlock.MouseLeave">
                                                        <EventTrigger.Actions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)" To="5" 
                                                                                     Duration="0:0:0"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger.Actions>
                                                    </EventTrigger>
                                                </TextBlock.Triggers>
                                            </TextBlock>
                                        </Canvas>

                                        <Grid Grid.Column="2"
                                              Margin="0,1,5,1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.Resources>

                                                <Style x:Key="EllipseG" TargetType="{x:Type Ellipse}">

                                                    <Setter Property="Opacity" Value="0.6"/>
                                                    <Setter Property="Margin" Value="2.6"/>
                                                    <Setter Property="Fill" Value="{StaticResource StandartLightColor}"/>

                                                </Style>
                                                
                                            </Grid.Resources>
                                            
                                            <Ellipse Grid.Row="0" Style="{StaticResource EllipseG}"/>
                                            <Ellipse Grid.Row="1" Style="{StaticResource EllipseG}"/>
                                            <Ellipse Grid.Row="2" Style="{StaticResource EllipseG}"/>

                                        </Grid>



                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                             
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>
            </Setter.Value>
        </Setter>

    </Style>


</ResourceDictionary>